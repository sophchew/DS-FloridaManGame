<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.GameViewController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="800.0" prefWidth="1000.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <HBox prefHeight="100.0" prefWidth="446.0">
                     <children>
                        <VBox prefHeight="100.0" prefWidth="371.0">
                           <children>
                              <Label fx:id="questionsLeftLabel" text="Label">
                                 <VBox.margin>
                                    <Insets left="20.0" top="20.0" />
                                 </VBox.margin>
                              </Label>
                              <Label fx:id="warningLabel" prefHeight="54.0" prefWidth="326.0" text="Label" visible="false" wrapText="true">
                                 <VBox.margin>
                                    <Insets left="20.0" top="20.0" />
                                 </VBox.margin>
                              </Label>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <VBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="555.0">
                     <children>
                        <Label fx:id="statsLabel" text="Label" />
                        <Label fx:id="incorrectLabel" text="Label" />
                        <Label fx:id="correctLabel" text="Label" />
                        <Label fx:id="percentageLabel" text="Label" />
                     </children>
                     <HBox.margin>
                        <Insets right="20.0" top="20.0" />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
            <Label fx:id="questionLabel" alignment="TOP_CENTER" contentDisplay="CENTER" prefHeight="191.0" prefWidth="836.0" text="Label" textAlignment="CENTER" wrapText="true">
               <VBox.margin>
                  <Insets top="100.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="guessResultLabel" text="Label">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <RadioButton fx:id="opt1" mnemonicParsing="false" onAction="#onOptionClick" text="RadioButton">
                     <HBox.margin>
                        <Insets top="20.0" />
                     </HBox.margin>
                     <padding>
                        <Insets left="20.0" right="20.0" />
                     </padding>
                  </RadioButton>
                  <RadioButton fx:id="opt2" layoutX="515.0" layoutY="30.0" mnemonicParsing="false" onAction="#onOptionClick" text="RadioButton">
                     <HBox.margin>
                        <Insets top="20.0" />
                     </HBox.margin>
                     <padding>
                        <Insets left="20.0" right="20.0" />
                     </padding>
                  </RadioButton>
                  <RadioButton fx:id="opt3" layoutX="510.0" layoutY="30.0" mnemonicParsing="false" onAction="#onOptionClick" text="RadioButton">
                     <padding>
                        <Insets left="20.0" right="20.0" />
                     </padding>
                     <HBox.margin>
                        <Insets top="20.0" />
                     </HBox.margin>
                  </RadioButton>
                  <RadioButton fx:id="opt4" layoutX="576.0" layoutY="30.0" mnemonicParsing="false" onAction="#onOptionClick" text="RadioButton">
                     <padding>
                        <Insets left="20.0" right="20.0" />
                     </padding>
                     <HBox.margin>
                        <Insets top="20.0" />
                     </HBox.margin>
                  </RadioButton>
               </children>
            </HBox>
            <Button fx:id="submitButton" mnemonicParsing="false" onAction="#onSubmitClick" text="Button">
               <VBox.margin>
                  <Insets top="80.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
